<div class="flex items-center gap-4 py-3 border-b" id="<%= dom_id(todo) %>">
  <%= button_to toggle_todo_path(todo), 
      method: :patch,
      class: "flex items-center" do %>
    <div class="w-5 h-5 border-2 rounded <%= todo.completed? ? 'bg-blue-500' : '' %>"></div>
  <% end %>
  
  <span class="flex-1 <%= todo.completed? ? 'line-through text-gray-400' : '' %>">
    <%= todo.title %>
  </span>
  
  <%= button_to todo_path(todo),
      method: :delete,
      class: "text-red-500 hover:text-red-700" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  <% end %>
</div>